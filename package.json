{
  "name": "napoleon-ai-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install",
    "test:unit": "vitest --run src/lib",
    "test:components": "vitest --run src/components",
    "test:api": "vitest --run src/app/api",
    "test:accessibility": "vitest --run accessibility",
    "test:performance": "vitest --run performance",
    "test:ai": "vitest --run ai",
    "test:integration": "vitest --run integration",
    "test:all": "npm run test:ci && npm run test:e2e",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "npm run build && npm run analyze:bundle",
    "analyze:bundle": "npx @next/bundle-analyzer .next/analyze",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "lighthouse:ci": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless'",
    "typegen": "supabase gen types typescript --project-id your-project-id > src/types/database.ts",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "tsx src/scripts/seed.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@azure/identity": "^4.10.1",
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@clerk/nextjs": "^6.24.0",
    "@eslint/eslintrc": "^3.3.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/replay": "^7.116.0",
    "@sentry/tracing": "^7.120.3",
    "@slack/logger": "^4.0.0",
    "@slack/socket-mode": "^1.3.0",
    "@slack/web-api": "^7.0.0",
    "@stripe/stripe-js": "^7.4.0",
    "@supabase/supabase-js": "^2.39.3",
    "@types/ws": "^8.18.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.0.3",
    "google-auth-library": "^10.1.0",
    "googleapis": "^128.0.0",
    "lucide-react": "^0.344.0",
    "next": "^15.2.3",
    "openai": "^5.9.0",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^14.17.0",
    "svix": "^1.69.0",
    "tailwind-merge": "^2.2.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@sentry/nextjs": "^9.38.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@upstash/redis": "^1.28.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "18.x"
  }
}
