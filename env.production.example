# ========================================
# MERIDIAN AI - PRODUCTION ENVIRONMENT
# ========================================
# Copy this to your Vercel environment variables
# Replace all placeholder values with your actual production credentials

# ========================================
# AUTHENTICATION (CLERK)
# ========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_clerk_key_here
CLERK_SECRET_KEY=sk_live_your_production_clerk_secret_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/onboarding
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ========================================
# DATABASE (SUPABASE)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here
DATABASE_URL=postgresql://postgres:password@your-project.supabase.co:5432/postgres

# ========================================
# AI (OPENAI)
# ========================================
OPENAI_API_KEY=sk-your_production_openai_key_here
OPENAI_ORG_ID=org-your_production_org_id_here

# ========================================
# PAYMENTS (STRIPE)
# ========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# ========================================
# EMAIL SERVICE (RESEND)
# ========================================
RESEND_API_KEY=re_your_production_resend_key

# ========================================
# GOOGLE APIS (GMAIL, CALENDAR, DRIVE)
# ========================================
GOOGLE_CLIENT_ID=your_production_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.vercel.app/auth/google/callback

# ========================================
# MICROSOFT APIS (OUTLOOK, OFFICE 365)
# ========================================
MICROSOFT_CLIENT_ID=your_production_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_production_microsoft_client_secret
MICROSOFT_REDIRECT_URI=https://your-domain.vercel.app/auth/microsoft/callback
MICROSOFT_TENANT_ID=your_production_microsoft_tenant_id

# ========================================
# SLACK API
# ========================================
SLACK_CLIENT_ID=your_production_slack_client_id
SLACK_CLIENT_SECRET=your_production_slack_client_secret
SLACK_SIGNING_SECRET=your_production_slack_signing_secret
SLACK_BOT_TOKEN=xoxb-your_production_slack_bot_token
SLACK_USER_TOKEN=xoxp-your_production_slack_user_token
SLACK_REDIRECT_URI=https://your-domain.vercel.app/auth/slack/callback
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/production/webhook/url

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_NAME=Meridian
NEXTAUTH_SECRET=your_production_nextauth_secret_for_oauth
NEXTAUTH_URL=https://your-domain.vercel.app

# ========================================
# WEBHOOK URLS FOR PRODUCTION
# ========================================
WEBHOOK_BASE_URL=https://your-domain.vercel.app/api/webhooks

# ========================================
# MONITORING AND LOGGING
# ========================================
LOGGING_WEBHOOK_URL=https://your_logging_service.com/webhook
ERROR_TRACKING_WEBHOOK_URL=https://your_error_tracking_service.com/webhook
ANALYTICS_WEBHOOK_URL=https://your_analytics_service.com/webhook
SECURITY_WEBHOOK_URL=https://your_security_service.com/webhook

# ========================================
# PRODUCTION SETTINGS
# ========================================
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production 